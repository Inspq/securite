FROM elfelip/tomcat:8.5.15

ENV JDK_VERSION_MAJ 1
ENV JDK_VERSION_MIN 8
ENV JDK_VERSION_PATCH 0
ENV JDK_VERSION_UPDATE 131
ENV JAVA_BASE /opt
ENV JAVA_HOME $JAVA_BASE/jdk${JDK_VERSION_MAJ}.${JDK_VERSION_MIN}.${JDK_VERSION_PATCH}_${JDK_VERSION_UPDATE}
ENV TZ=America/Toronto
ENV CATALINA_HOME /opt/tomcat
ENV CATALINA_OPTS "-server -XX:MaxPermSize=256m -Xmx1024m"
ENV PATH $CATALINA_HOME/bin:$JAVA_HOME/bin:$PATH

ARG APP_VERSION=0.0.1-SNAPSHOT
ADD target/securite.ui-${APP_VERSION}.war $CATALINA_HOME/webapps/ROOT.war

RUN rm -rf $CATALINA_HOME/webapps/ROOT
RUN rm -rf $CATALINA_HOME/webapps/docs
RUN rm -rf $CATALINA_HOME/webapps/examples
RUN rm -rf $CATALINA_HOME/webapps/host-manager
RUN rm -rf $CATALINA_HOME/webapps/manager
RUN mkdir $CATALINA_HOME/webapps/ROOT 
RUN cd $CATALINA_HOME/webapps/ROOT && jar -xvf ../ROOT.war


EXPOSE 8080 8009
WORKDIR $CATALINA_HOME

CMD ["catalina.sh", "run"]
